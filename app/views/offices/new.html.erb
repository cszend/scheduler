<% provide(:title, 'Add office') %>
<h1>Add office</h1>
<!-- <p><i>Create a scheduling service for your office or business.</i></p> -->
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@office) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <h2>Step 1 - Create your account:</h2>
      <%= f.fields_for :providers do |providers_form| %>

        <div class="form-group">
          <%= providers_form.label :email %>
          <%= providers_form.text_field :email, class: "span4" %>
        </div>
					
        <div class="form-group">
          <%= providers_form.label :username %>
          <%= providers_form.text_field :username, class: "span4" %>
        </div>
					
        <div class="form-group" style="margin-bottom: 15px">
          <label style="margin-bottom: 5">Role</label>
          <%= providers_form.label :role, :value => 1, class: "radio inline" do %>
            <%= providers_form.radio_button :role, 1, :checked => true %>
            Support Staff
          <% end %>
          <%= providers_form.label :role, :value => 2, class: "radio inline" do %>
            <%= providers_form.radio_button :role, 2 %>
            Service Provider
          <% end %>
        </div>
					
        <div class="form-group">
          <%= providers_form.label :password %>
          <%= providers_form.password_field :password, class: "span4" %>
        </div>
					
        <div class="form-group">
          <%= providers_form.label :password_confirmation, "Confirmation" %>
          <%= providers_form.password_field :password_confirmation, class: "span4" %>
        </div>
      <% end %>
		
      <h2>Step 2 - Describe your business:</h2>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "span4" %>
      </div>
			
      <div class="form-group">
        <%= f.label :time_zone %>
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: "Eastern Time (US & Canada)",  class: "span4" %>
      </div>


      <div class="form-group" style="margin-bottom: 15px">
        <label>Would you like to have your business listed in our public directory?</label>
        <%= f.label :listed, :value => 0, class: "radio inline" do %>
          <%= f.radio_button :listed, 0, :checked => true %>
	  No
        <% end %>
        <%= f.label :listed, :value => 1, class: "radio inline" do %>
          <%= f.radio_button :listed, 1 %>
          Yes
        <% end %>
      </div>
			
      <div id="extra-info">
			
        <div class="form-group">
          <%= f.label :street %>
          <%= f.text_field :street %>
        </div>

        <div class="controls controls-row">
          <%= f.label :city, class: "inline" %>
          <%= f.text_field :city %>
				
          <%= f.label :state, class: "inline" %>
          <%= f.select :state, options_for_select([['', ''],['AK', 'AK'],['AL', 'AL'],['AR', 'AR'],['AZ', 'AZ'],['CA', 'CA'],['CO', 'CO'],['CT', 'CT'],['DC', 'DC'],['DE', 'DE'],['FL', 'FL'],['GA', 'GA'],['HI', 'HI'],['IA', 'IA'],['ID', 'ID'],['IL', 'IL'],['IN', 'IN'],['KS', 'KS'],['KY', 'KY'],['LA', 'LA'],['MA', 'MA'],['MD', 'MD'],['ME', 'ME'],['MI', 'MI'],['MN', 'MN'],['MO', 'MO'],['MS', 'MS'],['MT', 'MT'],['NC', 'NC'],['ND', 'ND'],['NE', 'NE'],['NH', 'NH'],['NJ', 'NJ'],['NM', 'NM'],['NV', 'NV'],['NY', 'NY'],['OH', 'OH'],['OK', 'OK'],['OR', 'OR'],['PA', 'PA'],['RI', 'RI'],['SC', 'SC'],['SD', 'SD'],['TN', 'TN'],['TX', 'TX'],['UT', 'UT'],['VA', 'VA'],['VT', 'VT'],['WA', 'WA'],['WI', 'WI'],['WV', 'WV'],['WY', 'WY']]), class: "input-mini" %>
			
          <%= f.label :zip %>
	  <%= f.text_field :zip %>
        </div>
			
        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone %>
        </div>
			
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>

        <div class="form-group">
          <%= f.label :hours %>
          <%= f.text_field :hours %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, size: "24x12" %>
        </div>
			
        <div class="form-group">
          <%= f.label :category %>
          <%= f.text_field :category %>
        </div>
      </div>
						
      <%= f.hidden_field :status, :value => 2 %>
			
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

